    #include<bits/stdc++.h>
    using namespace std;
     
    //#define debug
     
    int main()
    {
    #ifdef debug
        freopen("input.txt","r",stdin);
    #endif
        long long a,b,c,s,d;
        cin>>a>>b>>c;
        d=abs(a-b);
        if(a!=b && d>=2)
            s = a+b+(c*2)-d+1;
        else
            s = a+b+(c*2);
        cout<<s<<endl;
    }
