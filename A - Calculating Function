    #include<bits/stdc++.h>
    using namespace std;
     
    //#define debug
     
    int main()
    {
     
    #ifdef debug
        freopen("C:/Users/jahid/Desktop/New Text Document.txt","r",stdin);
    #endif
     
        long long n,e=0,o=0;
        cin>>n;
        if(n%2==1)o=1;
        else if(n%2==0)e=1;
        if(o==1)
        {
            n=n/2;
            n++;
            cout<<-n<<endl;
        }
        else if(e==1)
        {
            n=n/2;
            cout<<n<<endl;
        }
        return 0;
    }
