    #include<bits/stdc++.h>
    using namespace std;
     
    //#define debug
     
    int main()
    {
     
    #ifdef debug
        freopen("C:/Users/jahid/Desktop/New Text Document.txt","r",stdin);
    #endif
     
        int t;
        cin>>t;
        while(t--)
        {
            int n;
            cin>>n;
            if(n%2==1)
            {
                cout<<"7";
            }
            else if(n%2==0)
            {
                cout<<"1";
            }
            n=n/2;
            for(int i=1;i<n;i++)
            {
                cout<<"1";
            }
            cout<<endl;
        }
    }
