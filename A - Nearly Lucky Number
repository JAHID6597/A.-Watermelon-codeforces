    #include<bits/stdc++.h>
    using namespace std;
     
    //#define debug
     
    int main()
    {
     
    #ifdef debug
        freopen("C:/Users/jahid/Desktop/New Text Document.txt","r",stdin);
    #endif
     
        int c=0;
        string s;
        cin>>s;
        for(int i=0;i<s.length();i++)
        {
            if(s[i]=='4' || s[i]=='7')c++;
        }
        if(c==4 || c==7)
            cout<<"YES"<<endl;
        else
            cout<<"NO"<<endl;
        return 0;
    }
