    #include<bits/stdc++.h>
    using namespace std;
     
    //#define debug
     
    int main()
    {
     
    #ifdef debug
        freopen("C:/Users/jahid/Desktop/New Text Document.txt","r",stdin);
    #endif
     
        int t;
        cin>>t;
        while(t--)
        {
            int a[3];
            for(int i=0; i<3; i++)
            {
                cin>>a[i];
            }
     
            sort(a,a+3);
            reverse(a,a+3);
     
            if(a[2]+a[1]<a[0]-1)
            {
                cout<<"No"<<endl;
            }
            else
            {
                cout<<"Yes"<<endl;
            }
        }
    }
