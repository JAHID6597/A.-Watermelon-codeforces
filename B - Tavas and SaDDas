    #include<bits/stdc++.h>
    #include <sstream>
    using namespace std;
     
    //#define debug
     
    int main()
    {
    #ifdef debug
        freopen("C:/Users/jahid/Desktop/New Text Document.txt","r",stdin);
    #endif
        int n,c=0;
        cin>>n;
        for(int i=1; n!=0; i*=2)
        {
            if(n%10==7)
                c+=2*i;
            else
                c+=i;
            n/=10;
        }
        cout<<c<<endl;
    }
